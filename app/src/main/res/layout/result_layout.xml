<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/BillTitle"
        android:textSize="35sp"
        android:textStyle="bold"/>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="20dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Just displays the words "meal price on left side -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0.5"
            android:textSize="25sp"
            android:text="@string/MealPriceBill" />

        <!--Will set the actual value of meal based on user input, placed on right side -->
        <TextView
            android:id="@+id/billMealPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:textSize="25sp"/>

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <!--Just displays the words "tip" (rate) on left side -->
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:layout_weight="0.5"
           android:text="@string/TipRateBill"
           android:textSize="25sp"/>

       <!--Will set the actual value of tips based on user input, placed on right side -->
       <TextView
           android:id="@+id/billTipPrice"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:layout_weight="0.5"
           android:gravity="end"
           android:textSize="25sp"/>

   </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="30dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Just displays the word Total on left side -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0.5"
            android:textSize="25sp"
            android:text="@string/finalTotal"
            android:textStyle="bold"/>

        <!--Will set the actual value of the total bill based on user input, placed on right side -->
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>