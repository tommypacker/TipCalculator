<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <!-- This linear layout displays the "meal price" line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/MealPricePrompt"
            android:layout_marginTop="30dp"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MealPrice"
            android:layout_weight="0.67"
            android:layout_marginTop="30dp"
            android:hint="@string/MealPriceHint"
            android:gravity="center"
            android:inputType="numberSigned|numberDecimal"/>

    </LinearLayout>

    <!-- This linear layout displays the "tip rate" line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/TipRatePrompt"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TipRate"
            android:layout_marginTop="20dp"
            android:layout_weight=".67"
            android:hint="@string/TipRateHint"
            android:gravity="center"
            android:inputType="numberSigned|numberDecimal"/>

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SubmitButton"
        android:text="@string/Submit"
        android:layout_marginTop="50dp"
        android:layout_gravity="center" />

</LinearLayout>